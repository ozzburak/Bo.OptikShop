@using OptikShop.WebUI.Areas.Admin.Models;

@model ProductFormViewModel

<div class="row mt-5">

    <div class="col-8 offset-2">

        <div class="card" style="border:solid 2px">

            <div class="card-header fw-bold fs-5">
                Ürün Formu
            </div>

            <div class="card-body">


                <form method="post" asp-area="Admin" asp-controller="Product" asp-action="Save" enctype="multipart/form-data">
                    @*   DOSYA TAŞIYORSAN , ENCTYPE EKLEMELISIN ! - File kısmını formdan ayrı bir part olarak görmesini istiyorsun. *@

                    @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <input asp-for="Id" type="hidden" />
                   

                    <div class="mb-2">
                        <label>İsim</label>
                        <input asp-for="Name" type="text" class="form-control" />
                        <span class="text-danger fw-bold mt-1"></span>
                    </div>

                    <div class="mb-2">
                        <label>Açıklama</label>
                        <input asp-for="Description" type="text" class="form-control" />
                    </div>

                    <div class="mb-2">
                        <label>Birim fiyatı</label>
                        <input asp-for="UnitPrice" type="text" class="form-control" />
                    </div>

                    <div class="mb-2">
                        <label>stok miktarı</label>
                        <input asp-for="UnitInStock" type="number" class="form-control" />
                    </div>

                    <div class="mb-2">
                        <label>Kategori</label>
                        <select asp-for="CategoryId" asp-items="@(List<SelectListItem>)ViewBag.V1" class="form-control">
                            <option selected disabled>Seçiniz</option>
                        </select>
                    </div>



                    <div class="mb-2">
                        <label ></label> <br />

                        @if (!string.IsNullOrWhiteSpace(ViewBag.ImagePath))
                        {
                            <img class="mb-2 mt-2" width="125" height="125" src="~/images/products/@ViewBag.ImagePath" />
                        }

                        <input type="file" asp-for="File" class="form-control" />
                    </div>

                    @if (!string.IsNullOrWhiteSpace(ViewBag.FileError))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.FileError
                        </div>
                    }

                    <button type="submit" class="btn btn-success mt-3 float-end">Formu Gönder</button>


                </form>

            </div>



        </div>


    </div>

</div>